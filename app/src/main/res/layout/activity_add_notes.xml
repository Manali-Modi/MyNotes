<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="one_note"
            type="com.example.mynotes.model.Notes" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.AddNotes">

        <Toolbar
            android:id="@+id/toolbar_add"
            android:title="@string/add"
            android:navigationIcon="@drawable/ic_arrow_back"
            android:titleTextColor="@color/orange_pink_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="m" />

        <EditText
            android:id="@+id/et_title"
            android:hint="@string/title"
            android:text="@{one_note.getTitle()}"
            android:textColor="@color/orange_pink_dark"
            android:textColorHint="@color/dark_gray"
            android:textSize="20sp"
            android:fontFamily="@font/titlefont"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_add"
                android:layout_below="@id/rec_items"
                android:src="@drawable/ic_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_item"
                android:text="@string/item"
                android:textColor="@color/light_gray"
                android:layout_below="@id/rec_items"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_desc"
                android:text="@{one_note.getDescription()}"
                android:hint="@string/note"
                android:textColorHint="@color/light_gray"
                android:gravity="start"
                android:padding="12dp"
                android:background="@drawable/edit_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>
</layout>